<%= form_for @user, url: sessions_path, :html => {:id => 'sessions'} do |form| %>

	<div class="text-field">
	  <%= form.label :email %> :
	  <%= form.text_field :email, type: 'email' %>
	</div>

	<div class="password-field">
	  <%= form.label :password %> : 
	  <%= form.password_field :password %>
	</div>
	<%= form.submit 'log in' %>
<% end %>
